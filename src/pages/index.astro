---
import LandingHeader from "../components/LandingHeader.astro";
import HeroSection from "../components/HeroSection.astro";
import Model3 from "../components/Model3.astro";
import ModelS from "../components/ModelS.astro";
import ModelX from "../components/ModelX.astro";
import Tesla from "../components/Tesla.astro";
import Solar from "../components/Solar.astro";
import Accesorios from "../components/Accesorios.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Coches eléctricos, energía solar y limpia | Tesla España">
	<LandingHeader />
	
	<main class="snap-y snap-mandatory overflow-x-hidden relative w-full h-screen overflow-auto scroll-m-0">
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<Model3 />
		</div>
		<div class="snap-center">
			<ModelS />
		</div>
		<div class="snap-center">
			<ModelX />
		</div>
		<div class="snap-center">
			<Tesla />
		</div>
		<div class="snap-center">
			<Solar />
		</div>
		<div class="snap-center">
			<Accesorios />
		</div>
  </main>
</Layout>